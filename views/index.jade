doctype html
html(lang="en", ng-app="PF")
	head
		meta(charset="utf-8")
		title= sitetitle
		link(rel="stylesheet", href="/css/style.css")
		//link(rel="stylesheet", href="/libs/angular-loading-bar/src/loading-bar.css")
		link(rel="alternate", type="application/rss+xml", title="{{sitetitle}} blog feed", href="/feed/")
		script(src="/libs/angular/angular.min.js")
		//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.16/angular.min.js
		script(src="/libs/angular-route/angular-route.min.js")
		//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.16/angular-route.min.js
		script(src="/libs/angular-resource/angular-resource.min.js")
		//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.16/angular-resource.min.js
		script(src="/libs/angular-animate/angular-animate.min.js")
		//cdnjs.cloudflare.com/ajax/libs/angular.js/1.2.16/angular-animate.min.js
		script(src="/libs/angular-loading-bar/build/loading-bar.min.js")
		script(src="/libs/showdown/compressed/showdown.js")
		//cdnjs.cloudflare.com/ajax/libs/showdown/0.3.1/showdown.min.js
		script(src="/js/app.js")
	body
		#container
			#header
				header
					img(src='/images/logo.png', width='200', height='244', alt='The Prosefectionist Logo')#logoimage
					<br>
					a(href='/')!= sitename

					p#tag= sitetag

					if (pages.length > 0)
						nav
							ul
								for title in pages
									li: a(href="#/page/#{title._id}")= title.shortname


			#content(ng-view)
