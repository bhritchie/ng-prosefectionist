doctype html
html(lang="en", ng-app="PF")
	head
		meta(charset="utf-8")
		title= sitetitle
		link(rel="stylesheet", href="/css/style.css")
		link(rel="alternate", type="application/rss+xml", title="{{sitetitle}} blog feed", href="/feed/")
		script(src="/libs/angular/angular.min.js")
		script(src="/libs/angular-route/angular-route.min.js")
		script(src="/libs/angular-resource/angular-resource.min.js")
		//script(src="/libs/angular-cached-resource.min.js")
		script(src="/libs/underscore/underscore-min.js")
		script(src="/libs/showdown-min.js")
		script(src="/js/app.js")
	body
		#wrapper
			#container
				#header
					header
						img(src='/images/logo.png', width='200', height='244', alt='The Prosefectionist Logo')#logoimage
						<br>
						a(href='/')!= sitename

						p#tag= sitetag

						if (pages.length > 0)
							nav
								ul
									for title in pages
										li: a(href="#/page/#{title._id}")= title.shortname


				#content(ng-view)
