article(ng-repeat="post in posts")
	a(href="#/post/{{post._id}}"): h2 {{post.title}}
	p(ng-bind-html="post.body | markdown")


#pagenav
	a(href="", ng-click="previous()", ng-hide="atStart")#prevlink Previous Page
	a(href="", ng-click="next()", ng-show="morePosts") Next Page

